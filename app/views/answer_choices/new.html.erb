
<div class="container">
  <h2>Add answer choices for <%=@survey.title %></h2>
  <h3><%= @question.question_text %></h3>
  <%= semantic_form_for [@question, @answer_choice] do |f| %>
    <%= f.inputs do %>
      <%= f.input :answer_text, :label => "Answer Option: " %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit %>
    <% end %>
    <%= link_to "Back to Question", @question %><br>
    <%= link_to "Back to Survey", @survey %>
  <% end %>
</div>
