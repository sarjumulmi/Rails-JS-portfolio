
<div class="container">
  <h1><%= @survey.title %> </h1>
  <ul class="list-group">
    <% @survey.questions.each do |question| %>
      <% if question.question_text %>
        <li class="list-group-item">
          <%= question.question_text %>
          <%= link_to "Add Answer Options", new_question_answer_choice_path(question, @answer_choice), :class => "btn btn-primary btn-sm" %>

          <% question.answer_choices.each do |answer_choice| %>
            <ul >
              <% if answer_choice.answer_text %>
                <li class="list-group-item"><%= answer_choice.answer_text %></li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <%= semantic_form_for [@survey, @question], :html=>{:class=> "form-group"} do |q|%>
    <%= q.inputs do %>
      <%= q.input :question_text, :label =>"Add New Question",:input_html => { :class => 'form-control'} %>
    <% end %>
    <%= q.actions do %>
      <%= q.action :submit, :button_html => { :class => 'btn btn-primary btn-lg'} %>
    <% end %>
  <% end %>
</div>
