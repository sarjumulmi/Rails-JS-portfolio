
<div class="container">
  <h2>Add answer choices for <%=@survey.title %></h2>
  <h3><%= @question.question_text %></h3>
  <%= semantic_form_for [@question, @answer_choice], :html=>{:class=> "form-group"}  do |f| %>
    <%= f.inputs do %>
      <%= f.input :answer_text, :label => "Answer Option: ",:input_html => { :class => 'form-control'} %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => 'btn btn-primary btn-lg'} %>
    <% end %>
    <div class="class="survey-button"">
      <%= link_to "Back to Question", @question,:class => "btn btn-primary btn-sm" %>
      <%= link_to "Back to Survey", @survey, :class => "btn btn-primary btn-sm" %>
    </div>

  <% end %>
</div>
