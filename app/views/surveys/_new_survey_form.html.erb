<%= f.inputs do%>
  <%= f.input :title, :label => "Survey Title", :input_html => { :class => 'form-control'} %>
  <%= f.input :description, :label => "Description", :input_html => { :class => 'form-control'} %>
  <fieldset>

    <%= f.semantic_fields_for :questions do |q| %>
    <legend class="card-title">Question</legend>
      <%= render 'question', q: q%>
    <% end %>
  </fieldset>
<% end %>

<%= f.actions do %>
  <%= f.action :submit, :button_html => { :class => 'btn btn-primary btn-lg'}%>
  <%= f.action :cancel%>
<% end %>
