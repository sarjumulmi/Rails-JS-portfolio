<div class="container">
  <h2>Add question for <%= @survey.title %></h2>
  <%= semantic_form_for [@survey, @question] do |f| %>
    <%= f.inputs do %>
      <%= f.input :question_text, :label => "Question: " %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit %>
    <% end %>
    <%= link_to "Back to Survey", @survey %>
  <% end %>
</div>
