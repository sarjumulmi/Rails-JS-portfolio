<%= title "Add Answer Choices - #{@survey.title.titleize}" %>
<div class="container back-to-survey">
  <h2>Add answer choices for <%=@survey.title.titleize %> <%= link_to "Back to Survey", @survey, :class => "btn btn-primary" %> </h2>
  <h3><%= @question.question_text %></h3>
  <%= semantic_form_for [@question, @answer_choice], :html=>{:class=> "form-group"}  do |f| %>
    <%= f.inputs do %>
      <%= f.input :answer_text, :label => "Answer Option: ",:input_html => { :class => 'form-control'} %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => 'btn btn-primary btn-lg'} %>
    <% end %>

  <% end %>
</div>
